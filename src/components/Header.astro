---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import MobileMenu from '@/components/ui/mobile-menu.tsx'

import { NAV_LINKS, SITE } from '@/consts'


---

<header
  class="bg-background transition-colors duration-300"
  id="site-header"
  transition:persist
>
  <div
    class="mx-auto flex max-w-3xl flex-wrap items-center justify-between gap-4 pl-4 pb-2 pt-2 pr-4"
  >
    <!-- Desktop: Logo and title -->
    <Link href="/" class="hidden md:flex shrink-0 items-center text-xl font-bold gap-2">
      <img src="/www2.png" alt="Saturn Logo" class="w-13 h-13 mr-1" />
      {SITE.title}
    </Link>
    
    <!-- Mobile: Logo on left, centered nav, theme toggle on right -->
    <div class="md:hidden flex items-center justify-between w-full">
      <!-- Mobile logo -->
      <Link href="/" class="flex shrink-0 items-center">
        <img src="/www2.png" alt="Saturn Logo" class="w-8 h-8" />
      </Link>
      
      <!-- Centered navigation -->
      <nav class="flex items-center gap-x-6 text-sm font-medium">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="hover:text-foreground/50 transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      
      <!-- Theme toggle -->
      <div class="flex shrink-0">
        <ThemeToggle transition:persist />
      </div>
    </div>
    
    <!-- Desktop: Navigation and controls -->
    <div class="hidden md:flex items-center gap-2 md:gap-4">
      <nav class="flex items-center gap-x-6 text-sm font-medium">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="hover:text-foreground/50 transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>

      <div class="flex items-center gap-2">
        <ThemeToggle transition:persist />
      </div>
    </div>
  </div>
</header>


<style>
  @font-face {
    font-family: 'Aero';
    src: url('/fonts/Aero.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }


  .aero-text {
    font-family: 'Aero', sans-serif;
    font-size: 1.5rem;
    letter-spacing: 0.05em;
  }
</style>
