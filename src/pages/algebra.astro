---
import Layout from '@/layouts/Layout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';

const courses = [
  {
    name: 'Mathematical Analysis In Several Variables',
    code: 'LMA017',
    postCount: 21,
    slug: 'mathematical-analysis-in-several-variables',
  },
  {
    name: 'Control Theory',
    code: 'ERE103',
    postCount: 15,
    slug: 'control-theory',
  },
  {
    name: 'Electrical Circuits And Fields',
    code: 'EEM076',
    postCount: 14,
    slug: 'electrical-circuits-and-fields',
  },
];
---

<Layout>
  <Breadcrumbs items={[{ label: 'Algebra', icon: 'lucide:book' }]} />
  <h1 class="text-4xl font-medium mb-6">Courses @ Algebra Bernays University</h1>
  <div class="flex flex-col gap-6">
    {courses.map(course => (
      <a href={`/algebra/${course.slug}`} class="block border rounded-lg p-4 hover:bg-secondary/50 transition">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
          <div>
            <div class="text-xl font-semibold">{course.name}</div>
            <div class="text-muted-foreground text-sm">{course.code}</div>
          </div>
          <div class="text-muted-foreground text-sm">{course.postCount} posts</div>
        </div>
      </a>
    ))}
  </div>
</Layout>
